<p style="color: green"><%= notice %></p>
<div class="container">

<div class="ml-2">
  <h1> All Users</h1>
</div>

<div id="users" class="row">
  <div class="col-m-6">
    <table class="table table-striped table-dark">
      <tr class="font-weight-bold">
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <th><%= user.first_name %></th>
          <th><%= user.last_name %></th>
          <th><%= user.email %></th>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= link_to "Add New User", new_user_path %>
</div>
